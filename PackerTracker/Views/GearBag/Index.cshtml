@{
  Layout = "_Layout";
}


  @using PackerTracker.Models;

    <h1>Gear to Pack</h1>

    @if (Model.Count == 0)
    {
      <p>There's no gear in the list.</p>
    }
    
    <form action="/gearbag/deleteselected" method="post">
    <ul>
    @foreach (Gear gear in Model)
    {
      <li>
      <input type="checkbox" name="gearIds" value="@gear.Id" id="gear-@gear.Id"/>
      <label for="gear-@gear.Id"><a href='/gearbag/@gear.Id'>@gear.Description</a></label>
      </li>
    }
    </ul>
    <button type="submit" name="clearSelectedBtn">Clear Selected Items</button>
    </form>
    

    <form action="/gearbag/delete" method="post">
    <button type="submit" name="button">Clear All Items</button>
    </form>

    <a href="/gearbag/new">Add a new item.</a>

